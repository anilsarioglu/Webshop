@model IEnumerable<Webshop.UI_MVC.Models.Webshop.Course>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Price)
        </th>
        <th></th>
    </tr>
    @foreach (var item in Model)
    {
        <div class="container">
            <div class="row justify-content-center">
                <div class="col col-md-4">
                    <div class="card" style="width: 18rem;">
                        <img src="https://img.pixers.pics/pho_wat(s3:700/FO/54/86/94/93/700_FO54869493_9a97f2d028a3ad79c6e601ef8ed7c56e.jpg,467,700,cms:2018/10/5bd1b6b8d04b8_220x50-watermark.png,over,247,650,jpg)/fotobehang-pembroke-welsh-corgi-puppy-geisoleerd-op-een-witte-achtergrond.jpg.jpg" class="card-img-top" alt="corgi">
                        <div class="card-body">
                            <h5 class="card-title">@Html.DisplayFor(modelItem => item.Price)</h5>
                            <p class="card-text">@Html.DisplayFor(modelItem => item.Name)</p>
                            <a href="#" class="btn btn-primary">Go somewhere</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
            @Html.ActionLink("Details", "Details", new { id = item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id = item.Id })
        </td>
    }

</table>
