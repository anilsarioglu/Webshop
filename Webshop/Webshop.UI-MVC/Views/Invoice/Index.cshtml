@model IEnumerable<Webshop.UI_MVC.Models.Webshop.Invoice>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>


<p>
    @Html.ActionLink("Verwijderde facturen", "DeletedIndex")
</p>
@using (Html.BeginForm())
{
    <p>
        Zoek op klantnaam: @Html.TextBox("search", null, new
                               {
                                   @class = "form-control", style = "display:initial;"
                               })
        <input class="btn" type="submit" value="Search" />
    </p>
}
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Date)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.IsPaid)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.InvoiceCode)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Date)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsPaid)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.InvoiceCode)
            </td>
            <td>
                @Html.ActionLink("Wijzig waarde betaald", "Edit", new {id = item.Id}) |
                @Html.ActionLink("Details", "Details", new {id = item.Id}) |
                @Html.ActionLink("Verwijder", "Delete", new {id = item.Id})
            </td>
        </tr>
    }

</table>